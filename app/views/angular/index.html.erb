<!DOCTYPE html>
<html ng-app="gemStore">

  <body ng-controller="StoreController" data-ng-init="index()">
    <!--  Store Header  -->
    <header>
      <h1 class="text-center">Flatlander Crafted Gems</h1>
    </header>

    <!--  Products Container  -->
    <div class="list-group">
      <!--  Product Container  -->
      <input type="text" data-ng-model-"newProduct.product_body">
      <button data-ng-click="create(newProduct)">Save New Product</button>

      <div class="list-group-item" ng-repeat="product in products">
        <h3>{{product.name}} <em class="pull-right">{{product.price | currency}}</em></h3>

        <!-- Image Gallery  -->
        <product-gallery></product-gallery>

        <!-- Product Tabs  -->
        <product-tabs></product-tabs>
      </div>

    </div>
  </body>
</html>
